<% content_for :title, "Modifier le mot de passe" %>

<div class="jumbotron">
  <div class="container">
    <div class="col-md-6 col-md-offset-3 well panel">
      <h1>Modifier le mot de passe</h1>

      <%= render 'shared/flash' %>

      <%= form_for(@user, url: profile_password_path, :html => { :class => 'form-horizontal', :method => :put }) do |f| %>
        <div class="form-group">
          <%= f.label :current_password, "Mot de passe actuel", :class => 'control-label col-md-4' %>
          <div class="col-md-8">
            <%= f.password_field :current_password, :class       => 'form-control',
                                                    :placeholder => '' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, 'Nouveau mot de passe', :class => 'control-label col-md-4' %>
          <div class="col-md-8">
            <%= f.password_field :password, :class       => 'form-control',
                                            :placeholder => '' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmation", :class => 'control-label col-md-4' %>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, :class       => 'form-control',
                                                         :placeholder => '' %>
          </div>
        </div>

        <div class="actions">
          <%= link_to 'Annuler', root_path, :class => 'btn btn-default' %>
          <%= f.submit 'Enregistrer', :class => 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
