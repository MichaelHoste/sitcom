<div class="container container-main">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h2>Modifier mon mot de passe</h2>

      <%= form_for(@user, url: profile_password_path, :html => { :class => 'form-horizontal', :method => :put }) do |f| %>
        <div class="form-group">
          <%= f.label :current_password, "Mot de passe actuel", :class => 'control-label col-md-3' %>
          <div class="col-md-9">
            <%= f.password_field :current_password, :class       => 'form-control',
                                                    :placeholder => '' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, 'Nouveau mot de passe', :class => 'control-label col-md-3' %>
          <div class="col-md-9">
            <%= f.password_field :password, :class       => 'form-control',
                                            :placeholder => '' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmation", :class => 'control-label col-md-3' %>
          <div class="col-md-9">
            <%= f.password_field :password_confirmation, :class       => 'form-control',
                                                         :placeholder => '' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-3 col-md-9">
            <%= f.submit 'Enregistrer', :class => 'btn btn-default' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
