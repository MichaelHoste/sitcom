<% content_for :title, "Sign In" %>

<div class="jumbotron">
  <div class="container">
    <div class="col-md-6 col-md-offset-3 well panel">
      <h1>Connexion</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
        <div class="form-group">
          <%= f.label :email, :class => 'control-label col-md-3' %>
          <div class="col-md-9">
            <%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'nom@example.com', :required => true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, :class => 'control-label col-md-3' %>
          <div class="col-md-9">
            <%= f.password_field :password, :class => 'form-control', :placeholder => '', :required => true %>
          </div>
        </div>

        <%= f.check_box :remember_me, :checked => true, :class => 'hidden' %>

        <div class="actions">
          <%= link_to 'Mot de passe perdu ?', new_password_path(resource_name), :class => 'forgot-password' %>
          <%= link_to 'Annuler', root_path, :class => 'btn btn-default' %>
          <%= f.submit 'Se connecter', :class => 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
