<% content_for :title, "Réinitialiser mon mot de passe" %>

<div class="jumbotron">
  <div class="container">
    <div class="col-md-6 col-md-offset-3 well panel">
      <h1>Réinitialiser mon mot de passe</h1>

      <%= render 'shared/flash' %>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal edit-password' }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, "Nouveau mot de passe", :class => 'control-label col-md-3' %>
          <div class="col-md-9">
            <%= f.password_field :password, :autofocus => true, :class => 'form-control', :autocomplete => 'off', :required => true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", :class => 'control-label col-md-3' %>
          <div class="col-md-9">
            <%= f.password_field :password_confirmation, :class => 'form-control', :autocomplete => 'off', :required => true %>
          </div>
        </div>

        <div class="actions">
          <%= link_to 'Annuler', root_path, :class => 'btn btn-default' %>
          <%= f.submit 'Valider', :class => 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
