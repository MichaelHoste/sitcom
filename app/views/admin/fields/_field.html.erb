<tr>
  <td class="<%= field.parent.present? ? 'leaf' : 'root' %>">
    <%= field.name %>
  </td>

  <td class="actions">
    <%= link_to fa('edit'), edit_admin_field_path(field), :class => 'btn btn-xs btn-primary' %>
    <%= link_to fa('remove'), admin_field_path(field), :class => 'btn btn-xs btn-danger', :data => { :confirm => "Supprimer ce lab ?" }, :method => :delete %>
  </td>
</tr>

<%= render field.children %>

<% if field.parent.blank? %>
  <tr>
    <td class="leaf" colspan="2">
      <%= link_to 'Ajouter un sous-domaine', new_admin_field_child_path(field) %>
    </td>
  </tr>
<% end %>
