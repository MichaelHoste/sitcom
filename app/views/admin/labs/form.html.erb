<div class="container container-main">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <ol class="breadcrumb">
        <li><%= link_to 'Labs', admin_labs_path %></li>
        <li class="active"><%= params[:action].in?(['new', 'create']) ? 'Créer un lab' : 'Modifier un lab' %></li>
      </ol>

      <%= render 'shared/flash' %>

      <%= form_for([:admin, @lab], :html => { :class => 'form-horizontal' }) do |f| %>
        <fieldset>
          <legend>Général</legend>

          <div class="form-group">
            <%= f.label :name, 'Nom', :class => 'control-label col-md-3' %>

            <div class="col-md-9">
              <%= f.text_field :name, :class => 'form-control' %>
            </div>
          </div>
        </fieldset>

        <div class="form-group">
          <div class="col-md-offset-3 col-md-9">
            <%= f.submit 'Enregistrer', :class => 'btn btn-default' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
