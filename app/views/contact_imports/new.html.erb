<div class="container-fluid">
  <div class="row">
    <h2>Import de contacts: v√©rification et confirmation</h2>

    <a href="<%= sample_lab_contact_imports_path(@lab, :format => :csv) %>">
      Fichier CSV exemple
    </a>

    <% if @errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @errors.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_tag lab_contact_imports_path(@lab), :multipart => true do |f| %>
      <%= file_field_tag 'csv_file' %>

      <%= submit_tag 'Analyser le fichier' %>
    <% end %>
  </div>
</div>
